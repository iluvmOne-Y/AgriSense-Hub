{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",

	"organizeImports": { "enabled": false },

	"linter": {
		"enabled": false
	},

	"formatter": {
		"ignore": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx"],

		"enabled": true,
		"formatWithErrors": true,

		"indentStyle": "space",
		"indentWidth": 4,

		"lineEnding": "lf",
		"lineWidth": 80,

		"attributePosition": "auto",

		"useEditorconfig": true
	},

	"json": {
		"parser": {
			"allowComments": true
		}
	}
}
