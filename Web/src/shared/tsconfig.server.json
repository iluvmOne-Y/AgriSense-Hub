{
	"compilerOptions": {
		"lib": ["es2022"],
		"module": "NodeNext",

		/* Base Options */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,

		/* Strictness */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,

		/* Build Settings */
		"rootDir": "..",
		"outDir": "../server/dist",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,

		/* Path Aliases */
		"paths": {
			"Shared/*": ["./src/*"]
		}
	},
	"include": ["./src/**/*"]
}
